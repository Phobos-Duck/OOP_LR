<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Home (Услуги / Главная) -->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>webapp.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <!-- About -->
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>webapp.servlet.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <!-- Contact -->
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>webapp.servlet.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>

    <!-- Feedback -->
    <servlet>
        <servlet-name>FeedbackServlet</servlet-name>
        <servlet-class>webapp.servlet.FeedbackServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FeedbackServlet</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>

    <!-- Calculator -->
    <servlet>
        <servlet-name>CalculatorPageServlet</servlet-name>
        <servlet-class>webapp.servlet.CalculatorPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalculatorPageServlet</servlet-name>
        <url-pattern>/calculator</url-pattern>
    </servlet-mapping>

    <!-- Обработка расчётов (POST) -->
    <servlet>
        <servlet-name>VolumeCalculatorServlet</servlet-name>
        <servlet-class>webapp.servlet.VolumeCalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VolumeCalculatorServlet</servlet-name>
        <url-pattern>/calculateVolume</url-pattern>
    </servlet-mapping>

    <!-- Главная страница -->
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>

</web-app>
